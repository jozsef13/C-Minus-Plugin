<idea-plugin>
    <id>com.plugin.project.Intellij-IDEA-Plugin</id>
    <name>SDK: C- Language Support</name>
    <vendor email="gabriel.simon980@gmail.com" url="">Simon Jozsef Gabriel</vendor>

    <description>
        <![CDATA[
      Plugin to add custom language support to an IntelliJ Platform-based IDE. <br>Defines a new language,
      <i>C- language</i> with support for syntax highlighting, annotations, code completion, and other features.
      <br>
    ]]>
    </description>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="CMinus File" implementationClass="com.plugin.project.language.CMinusFileType" fieldName="INSTANCE" language="CMinus" extensions="cmin" />
        <lang.parserDefinition language="CMinus" implementationClass="com.plugin.project.language.CMinusParserDefinition" />
        <lang.syntaxHighlighterFactory language="CMinus" implementationClass="com.plugin.project.language.CMinusSyntaxHighlighterFactory" />
        <colorSettingsPage implementation="com.plugin.project.language.CMinusColorSettingsPage" />
        <annotator language="JAVA" implementationClass="com.plugin.project.language.CMinusAnnotator" />
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.plugin.project.language.CMinusLineMarkerProvider"/>
        <completion.contributor language="CMinus" implementationClass="com.plugin.project.language.CMinusCompletionContributor"/>
        <psi.referenceContributor implementation="com.plugin.project.language.CMinusReferenceContributor" />
        <lang.refactoringSupport language="CMinus" implementationClass="com.plugin.project.language.CMinusRefactoringSupportProvider" />
        <lang.findUsagesProvider language="CMinus" implementationClass="com.plugin.project.language.CMinusFindUsagesProvider" />
        <gotoSymbolContributor implementation="com.plugin.project.language.CMinusChooseByNameContributor" />
        <lang.psiStructureViewFactory language="CMinus" implementationClass="com.plugin.project.language.CMinusStructureViewFactory" />
        <lang.formatter language="CMinus" implementationClass="com.plugin.project.language.CMinusFormattingModelBuilder" />
        <codeStyleSettingsProvider implementation="com.plugin.project.language.CMinusCodeStyleSettingsProvider" />
        <langCodeStyleSettingsProvider
                implementation="com.plugin.project.language.CMinusLanguageCodeStyleSettingsProvider" />
        <lang.commenter language="CMinus" implementationClass="com.plugin.project.language.CMinusCommenter" />
    </extensions>

</idea-plugin>